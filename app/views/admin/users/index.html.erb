<h1>ユーザー一覧</h1>

<%= link_to '新規ユーザー作成', new_admin_user_path, class: "btn btn-primary" %>

<table class="table table-borderd">
  <thead>
    <tr>
      <th><%= t('users.id')%></th>
      <th><%= t('users.name') %></th>
      <th><%= t('users.email') %></th>
      <th><%= t('users.tasks_count') %></th>
      <th><%= t('users.admin') %></th>
      <th><%= t('users.created_at') %></th>
      <th><%= t('users.updated_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-body">
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id%></td>
        <td><%= group.name %></td>
        <td><%= group.users.count %></td>
        <td><%= group.created_at %></td>
        <td><%= group.updated_at %></td>
        <td><%= link_to t('group.show'), admin_user_path(group) %></td>
        <td><%= link_to t('group.edit'), edit_admin_user_path(group) %></td>
        <td><%= link_to t('group.delete'), admin_user_path(group), method: :delete, data: { confirm: t('tasks.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>