<h1>ユーザー詳細</h1>

<div class="box4">
  <p>
    <strong><%= t('users.name') %>:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong><%= t('users.email') %>:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong><%= t('users.admin') %>:</strong>
    <%= @user.admin? ? "あり" : "なし" %>
  </p>

  <p>
    <strong><%= t('users.created_at') %>:</strong>
    <%= @user.created_at %>
  </p>

  <p>
    <strong><%= t('users.updated_at') %>:</strong>
    <%= @user.updated_at %>
  </p>

  <%= link_to t('tasks.edit'), edit_admin_user_path(@user) %>
  <%= link_to t('tasks.delete'), admin_user_path(@user), method: :delete, data: { confirm: t('tasks.delete_confirm') } %>
</div>

<h1><%= @user.name %>のタスク一覧 </h1>
<table class="table table-borderd">
  <thead>
    <tr>
      <th><%= t('tasks.title') %></th>
      <th><%= t('tasks.content') %></th>
      <th><%= t('tasks.limit_date') %></th>
      <th><%= t('tasks.status') %></th>
      <th><%= t('tasks.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-body">
    <% @user.tasks.each do |task| %>
      <tr>
        <td class="task-title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.limit_date%></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('tasks.show'), task %></td>
        <td><%= link_to t('tasks.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('tasks.delete'), task, method: :delete, data: { confirm: t('tasks.delete_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('tasks.back'), admin_users_path, class: 'btn btn-default' %>